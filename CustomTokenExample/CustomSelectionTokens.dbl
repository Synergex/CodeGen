import System
import CodeGen.Engine
import CodeGen.RepositoryAPI

subroutine LoadCustomSelectionTokens
	endparams
proc
	Env.CustomSelectionTokens.Add(new SelectionCustom1())
	Env.CustomSelectionTokens.Add(new SelectionCustom2())
	xreturn
endsubroutine

namespace CodeGen.CustomTokenExample
	
	public class SelectionCustom1 extends CustomSelectionToken
		
		public override property Token, String
			method get
			proc
				mreturn "<SELECTION_CUSTOM1>"
			endmethod
		endproperty
		
		public override method Replace      ,Boolean
			required in    Fld              ,@RpsField  ;;Current field
			required in    SelNbr           ,int        ;;Current selection number
			required in    TokenStart       ,int        ;;Start position of token in buffer
			required in    TokenEnd         ,int        ;;End position of token in buffer
			required inout buffer           ,a          ;;Buffer containing token to be replaced
			endparams
		proc
			mreturn ReplaceToken(buffer,"<SELECTION_CUSTOM1>","Custom field selection token 1")
		endmethod

	endclass
	
	public class SelectionCustom2 extends CustomSelectionToken
		
		public override property Token, String
			method get
			proc
				mreturn "<SELECTION_CUSTOM2>"
			endmethod
		endproperty
		
		public override method Replace      ,Boolean
			required in    Fld              ,@RpsField  ;;Current field
			required in    SelNbr           ,int        ;;Current selection number
			required in    TokenStart       ,int        ;;Start position of token in buffer
			required in    TokenEnd         ,int        ;;End position of token in buffer
			required inout buffer           ,a          ;;Buffer containing token to be replaced
			endparams
		proc
			mreturn ReplaceToken(buffer,"<SELECTION_CUSTOM2>","Custom field selection token 2")
		endmethod
		
	endclass
	
endnamespace

